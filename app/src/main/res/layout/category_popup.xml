<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <ImageView
        android:id="@+id/bg_top"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/baseColor2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg_top"
        app:srcCompat="@drawable/filter" />

    <TextView
        android:id="@+id/tv_filter"
        android:layout_width="wrap_content"
        android:layout_height="70dp"

        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:text="검색"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_top"
        app:layout_constraintLeft_toRightOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/rbtn_two"
        android:layout_width="wrap_content"
        android:layout_height="60dp"

        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"

        android:gravity="center"
        android:text="표시 개수"
        android:textColor="@color/gray"
        android:visibility="gone"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_filter" />

    <RadioButton
        android:id="@+id/rbtn_three"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="3개씩"
        android:visibility="gone"
        android:theme="@style/ViewCountRadioButton"
        app:layout_constraintBottom_toBottomOf="@+id/rbtn_two"
        app:layout_constraintLeft_toRightOf="@+id/rbtn_two" />


    <RadioButton
        android:id="@+id/rbtn_four"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="4개씩"
        android:visibility="gone"
        android:theme="@style/ViewCountRadioButton"
        app:layout_constraintBottom_toBottomOf="@+id/rbtn_two"
        app:layout_constraintLeft_toRightOf="@+id/rbtn_three" />

    <TextView
        android:id="@+id/txt_Gender"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="표시 성별"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/tv_filter" />

    <RadioButton
        android:id="@+id/rbtn_man"
        android:layout_width="0dp"
        android:layout_height="60dp"

        android:layout_marginLeft="20dp"
        android:background="@color/white"
        android:text="남자"
        android:theme="@style/ManCheckBox"
        app:layout_constraintBottom_toBottomOf="@+id/txt_Gender"
        app:layout_constraintLeft_toRightOf="@+id/txt_Gender" />

    <RadioButton
        android:id="@+id/rbtn_woman"
        android:layout_width="0dp"
        android:layout_height="60dp"

        android:layout_marginLeft="20dp"
        android:background="@color/white"
        android:text="여자"
        android:theme="@style/WomanCheckBox"
        app:layout_constraintBottom_toBottomOf="@+id/txt_Gender"
        app:layout_constraintLeft_toRightOf="@+id/rbtn_man" />

    <TextView
        android:id="@+id/txt_Age"
        android:layout_width="wrap_content"
        android:layout_height="60dp"

        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="표시 나이"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/txt_Gender" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:entries="@array/MyProfire_Age"
        android:spinnerMode="dialog"

        app:layout_constraintBottom_toBottomOf="@id/txt_Age"
        app:layout_constraintLeft_toLeftOf="@+id/rbtn_man" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:gravity="left|center_vertical"
        android:text="세"
        app:layout_constraintBottom_toBottomOf="@+id/txt_Age"
        app:layout_constraintStart_toEndOf="@+id/spinner1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="~"
        app:layout_constraintLeft_toLeftOf="@+id/spinner1"
        app:layout_constraintTop_toBottomOf="@+id/spinner1" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:entries="@array/MyProfire_Age"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintLeft_toRightOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:gravity="left|center"
        android:text="세"
        app:layout_constraintBottom_toBottomOf="@+id/spinner2"
        app:layout_constraintStart_toEndOf="@+id/spinner2" />


    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/purple_btn_bg2"
        android:text="GO!"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner2" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/purple_stroke_btn_bg"
        android:text="취소"
        android:textSize="18dp"
        android:textColor="@color/baseColor2"
        app:layout_constraintBottom_toBottomOf="@+id/btn_save"
        app:layout_constraintLeft_toRightOf="@+id/btn_save"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>