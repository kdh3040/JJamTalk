        android:layout_weight="1"
        android:weightSum="4">


        <ImageView
            android:id="@+id/iv_my_card"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@drawable/circle_border"
            android:padding="1dp"/>

