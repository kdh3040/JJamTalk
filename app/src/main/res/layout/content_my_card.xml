<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_mycard_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2">


    <ImageView
        android:id="@+id/iv_my_card"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/circle_border"
        android:padding="1dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/iv_grade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_grade"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/iv_item"
        app:layout_constraintStart_toEndOf="@+id/iv_my_card"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="9dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/iv_grade"
        app:layout_constraintEnd_toStartOf="@+id/tv_nickname"
        app:layout_constraintStart_toEndOf="@+id/iv_grade" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:maxLength="8"
        android:text="상희, 27"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_grade"
        app:layout_constraintEnd_toStartOf="@+id/tv_memo"
        app:layout_constraintStart_toEndOf="@+id/iv_item" />

    <TextView
        android:id="@+id/tv_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@color/fabRipple"
        android:gravity="right|center_vertical"
        android:maxLength="8"
        android:padding="10dp"
        android:text="상희"
        android:textColor="@color/boardTextColor"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_grade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_nickname" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_grade"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_my_card"
        app:srcCompat="@color/black" />


</android.support.constraint.ConstraintLayout>