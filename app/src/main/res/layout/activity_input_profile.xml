<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    tools:context="com.hodo.talkking.InputProfile">


    <ImageView
        android:id="@+id/InputProfile_SumImg"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image" />


    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="30dp"
        android:gravity="center_vertical"
        android:text="닉네임"
        android:textColor="@android:color/holo_purple"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/InputProfile_NickName"
        app:layout_constraintEnd_toStartOf="@+id/InputProfile_NickName"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/InputProfile_NickName"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="( 최대 8자)"
        android:inputType="textPersonName"
        android:maxLength="8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_nickname"
        app:layout_constraintTop_toBottomOf="@+id/InputProfile_SumImg" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="46dp"
        android:gravity="center_vertical"
        android:text="나이"
        android:textColor="@android:color/holo_purple"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/InputProfile_Age_1"
        app:layout_constraintLeft_toLeftOf="@+id/tv_nickname"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname" />


    <Spinner
        android:id="@+id/InputProfile_Age_1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:spinnerMode="dialog"
        android:entries="@array/MyProfire_Age"
        app:layout_constraintBottom_toBottomOf="@+id/tv_age"
        app:layout_constraintLeft_toLeftOf="@+id/InputProfile_NickName" />


    <TextView
        android:id="@+id/textView_Gender"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="46dp"
        android:gravity="center_vertical"
        android:text="성별"
        android:textColor="@android:color/holo_purple"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/InputProfile_Gender_1"
        app:layout_constraintLeft_toLeftOf="@+id/tv_age"
        app:layout_constraintTop_toBottomOf="@+id/tv_age" />


    <Spinner
        android:id="@+id/InputProfile_Gender_1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:spinnerMode="dialog"
        android:entries="@array/InputProfile_Gender"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Gender"
        app:layout_constraintLeft_toLeftOf="@+id/InputProfile_NickName" />


    <TextView
        android:id="@+id/tv_chat"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="하고 싶은 말"
        android:textColor="@android:color/holo_purple"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView_Gender"
        app:layout_constraintTop_toBottomOf="@+id/textView_Gender" />

    <EditText
        android:id="@+id/InputProfile_Memo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_outline"
        android:ems="10"
        android:gravity="bottom|left"
        android:hint="(100자 이내)"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="100"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_chat"
        app:layout_constraintBottom_toTopOf="@id/tv_access"/>

    <CheckBox
        android:id="@+id/cb_access"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:theme="@style/RejectCheckBox"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_chat"
        app:layout_constraintTop_toBottomOf="@+id/InputProfile_Memo"
        app:layout_constraintBottom_toTopOf="@id/tv_loc"/>

    <TextView
        android:id="@+id/tv_access"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="이용 약관 동의 (필수)"
        android:textColor="@android:color/holo_purple"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/cb_access"
        app:layout_constraintTop_toBottomOf="@+id/InputProfile_Memo"
        app:layout_constraintBottom_toTopOf="@id/tv_loc"/>

    <Button
        android:id="@+id/btn_access"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="@drawable/purple_btn_bg"
        android:text="약관 보기"

        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/InputProfile_Memo"
        app:layout_constraintTop_toTopOf="@+id/tv_access" />

    <CheckBox
        android:id="@+id/cb_loc"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:theme="@style/RejectCheckBox"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_chat"
        app:layout_constraintTop_toTopOf="@+id/tv_loc"
        app:layout_constraintBottom_toTopOf="@id/tv_privacy"/>

    <TextView
        android:id="@+id/tv_loc"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:text="위치정보 이용 동의 (필수)"
        android:textColor="@android:color/holo_purple"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/cb_loc"
        app:layout_constraintTop_toBottomOf="@+id/tv_access"
        app:layout_constraintBottom_toTopOf="@id/tv_privacy"/>

    <Button
        android:id="@+id/btn_loc"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="@drawable/purple_btn_bg"
        android:text="약관 보기"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/btn_access"
        app:layout_constraintTop_toTopOf="@+id/tv_loc" />

    <TextView
        android:id="@+id/tv_privacy"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="개인정보 취급방침"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/holo_purple"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_chat"
        app:layout_constraintTop_toBottomOf="@+id/tv_loc"
        app:layout_constraintBottom_toTopOf="@id/InputProfile_Check"/>

    <Button
        android:id="@+id/btn_privacy"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="@drawable/purple_btn_bg"
        android:text="약관 보기"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/btn_loc"
        app:layout_constraintTop_toTopOf="@+id/tv_privacy" />

    <Button
        android:id="@+id/InputProfile_Check"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/purple_btn_bg"
        android:text="입장하기"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_privacy" />


</android.support.constraint.ConstraintLayout>