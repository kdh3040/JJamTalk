<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:minHeight="300dp"


    >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"

        android:layout_height="50dp"

        android:background="@drawable/rounded_top_dialog"
        android:gravity="center"
        android:text="하트 날리기"
        android:textColor="@color/textColorLight"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="2"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/HeartPop_MyHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4000하트"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/HeartPop_Charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="하트 충전" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="2"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/HeartPop_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10하트" />

        <Button
            android:id="@+id/HeartPop_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20하트" />

        <Button
            android:id="@+id/HeartPop_300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30하트" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="2"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/HeartPop_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="50하트" />

        <Button
            android:id="@+id/HeartPop_1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100하트" />

        <Button
            android:id="@+id/HeartPop_5000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="500하트" />

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="함께 남기실 메세지"
            android:textColor="@color/si_default_text_color_selected" />

        <EditText
            android:id="@+id/HeartPop_Msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="안녕하세요"
            android:inputType="textPersonName"
            android:textColor="@color/textColorDark" />
    </LinearLayout>

    <TextView


        android:id="@+id/HeartPop_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"


        android:layout_weight="2"
        android:background="@color/white"

        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/textColorDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/rounded_bottom_white"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/btn_gift_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_pressed"
            android:text="날린다"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_gift_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_pressed"
            android:text="취소"
            android:textSize="18dp"
            android:textColor="@color/white"
             />
    </LinearLayout>

</LinearLayout>