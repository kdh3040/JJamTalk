<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/dialog_bg"
    android:orientation="vertical"


    >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"

        android:layout_height="70dp"

        android:background="@drawable/rounded_top_dialog"
        android:gravity="center"
        android:text="하트 날리기"
        android:textColor="@color/textColorLight"
        android:textSize="30dp" />
    <View
        android:id="@+id/Divide_Btn"
        style="@style/AlertDivider"

        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/HeartPop_100"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_enabled"
            android:drawableLeft="@drawable/heart_icon"
            android:text="10" />

        <Button
            android:id="@+id/HeartPop_200"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_enabled"
            android:drawableLeft="@drawable/heart_icon"
            android:text="30" />

        <Button
            android:id="@+id/HeartPop_300"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_enabled"
            android:drawableLeft="@drawable/heart_icon"
            android:text="50" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/HeartPop_500"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_enabled"
            android:drawableLeft="@drawable/heart_icon"
            android:text="100" />

        <Button
            android:id="@+id/HeartPop_1000"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_enabled"
            android:drawableLeft="@drawable/heart_icon"
            android:text="500" />

        <Button
            android:id="@+id/HeartPop_5000"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_enabled"
            android:drawableLeft="@drawable/heart_icon"
            android:text="1000" />

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <EditText
            android:id="@+id/HeartPop_Msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="10dp"
            android:background="@drawable/et_outline"
            android:hint="동봉할 메세지(30자 이내)"
            android:inputType="textPersonName"
            android:maxLength="30"
            android:minLines="3"
            android:textColor="@color/textColorDark" />
    </LinearLayout>

    <TextView


        android:id="@+id/HeartPop_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:background="@color/white"

        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/textColorDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rounded_bottom_white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_gift_send"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/base_btn_bg"
            android:text="날린다"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_gift_cancel"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/base_btn_bg"
            android:text="취소"
            android:textSize="15dp" />

        <Button
            android:id="@+id/HeartPop_Charge"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/base_btn_bg"
            android:text="골드 충전"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>