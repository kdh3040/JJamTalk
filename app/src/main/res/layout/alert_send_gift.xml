<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >


    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/baseColor2"
        android:gravity="center"
        android:text="하트를 날려서 팬이 되어보세요!"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical"
        android:text="현재 코인 :"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/tv_coin"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/iv_coin"
        app:layout_constraintLeft_toRightOf="@+id/iv_coin" />

    <ImageView
        android:id="@+id/iv_coin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:srcCompat="@drawable/coin" />

    <Button
        android:id="@+id/HeartPop_10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/heart_empty"
        android:drawablePadding="5dp"
        android:text="10"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/HeartPop_30"
        app:layout_constraintTop_toBottomOf="@+id/iv_coin" />

    <Button
        android:id="@+id/HeartPop_30"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/heart_empty"
        android:text="30"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/HeartPop_10"
        app:layout_constraintLeft_toRightOf="@+id/HeartPop_10"
        app:layout_constraintRight_toLeftOf="@id/HeartPop_50" />

    <Button
        android:id="@+id/HeartPop_50"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/heart_empty"
        android:text="50"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/HeartPop_10"
        app:layout_constraintLeft_toRightOf="@+id/HeartPop_30"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/HeartPop_100"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginTop="8dp"
        android:background="@drawable/heart_empty"
        android:text="100"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/HeartPop_10"
        app:layout_constraintRight_toRightOf="@+id/HeartPop_10"
        app:layout_constraintTop_toBottomOf="@+id/HeartPop_10" />

    <Button
        android:id="@+id/HeartPop_300"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:background="@drawable/heart_empty"
        android:text="300"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/HeartPop_100"
        app:layout_constraintLeft_toLeftOf="@+id/HeartPop_30"
        app:layout_constraintRight_toRightOf="@+id/HeartPop_30" />

    <Button
        android:id="@+id/HeartPop_500"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:background="@drawable/heart_empty"
        android:text="500"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/HeartPop_100"
        app:layout_constraintLeft_toLeftOf="@+id/HeartPop_50"
        app:layout_constraintRight_toRightOf="@+id/HeartPop_50" />


    <TextView


        android:id="@+id/HeartPop_text"
        android:layout_width="0dp"
        android:layout_height="50dp"


        android:layout_marginEnd="5dp"

        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/baseColorLight"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HeartPop_500" />

    <EditText
        android:id="@+id/HeartPop_Msg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:background="@drawable/et_outline"
        android:gravity="top|left"
        android:hint="같이 보낼 메세지(50자 이내)"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="50"
        android:minLines="3"
        android:padding="8dp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HeartPop_text" />


    <Button
        android:id="@+id/btn_gift_send"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/purple_btn_bg2"
        android:text="날린다"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_gift_cancel"
        app:layout_constraintTop_toBottomOf="@+id/HeartPop_Msg" />

    <Button
        android:id="@+id/btn_gift_cancel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/purple_stroke_btn_bg"
        android:text="취소"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_gift_send"
        app:layout_constraintLeft_toRightOf="@+id/btn_gift_send"
        app:layout_constraintRight_toLeftOf="@id/HeartPop_Charge" />

    <Button
        android:id="@+id/HeartPop_Charge"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/yellow_btn_bg"
        android:text="코인 충전"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_gift_send"
        app:layout_constraintLeft_toRightOf="@+id/btn_gift_cancel"
        app:layout_constraintRight_toRightOf="parent" />




</android.support.constraint.ConstraintLayout>