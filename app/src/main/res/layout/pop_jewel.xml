<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_jewel"
        android:layout_width="255dp"


        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/emerald_gift" />

    <TextView
        android:id="@+id/tv_prob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="획득 확률 0.5%"
        android:textColor="@android:color/white"
        android:textSize="8sp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_jewel"
        app:layout_constraintTop_toTopOf="@+id/iv_jewel" />

    <TextView
        android:id="@+id/tv_jewel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="다이아몬드"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_sell"
        app:layout_constraintLeft_toLeftOf="@+id/iv_jewel"
        app:layout_constraintRight_toRightOf="@+id/iv_jewel" />

    <Button
        android:id="@+id/btn_yes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/white"
        android:text="확인"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/iv_jewel"
        app:layout_constraintLeft_toRightOf="@id/btn_sell"
        app:layout_constraintRight_toRightOf="@+id/iv_jewel" />

    <Button
        android:id="@+id/btn_sell"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="5dp"
        android:background="@color/baseColor2"
        android:text="팔기"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_jewel"
        app:layout_constraintLeft_toLeftOf="@+id/iv_jewel"
        app:layout_constraintRight_toLeftOf="@+id/btn_yes" />

</android.support.constraint.ConstraintLayout>