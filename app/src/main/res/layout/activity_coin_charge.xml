<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ImageView
        android:id="@+id/bg_top"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/white" />

    <TextView
        android:id="@+id/tv_mycoin"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="보유 코인 : 100"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/iv_10"
        app:layout_constraintLeft_toLeftOf="@+id/bg_top"
        app:layout_constraintRight_toRightOf="@+id/bg_top"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_coin"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:paddingRight="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_mycoin"
        app:layout_constraintStart_toEndOf="@+id/tv_mycoin"
        app:layout_constraintTop_toTopOf="@+id/tv_mycoin"
        app:srcCompat="@drawable/coin" />

    <ImageView
        android:id="@+id/iv_10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:paddingLeft="20dp"
        android:paddingRight="150dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mycoin"
        app:srcCompat="@drawable/buy_10" />

    <ImageView
        android:id="@+id/iv_30"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white"
        android:paddingLeft="20dp"
        android:paddingRight="150dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_50"
        app:layout_constraintLeft_toLeftOf="@+id/iv_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_10"
        app:srcCompat="@drawable/buy_30" />

    <ImageView
        android:id="@+id/iv_50"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white"
        android:paddingLeft="20dp"
        android:paddingRight="150dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_100"
        app:layout_constraintLeft_toLeftOf="@+id/iv_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_30"
        app:srcCompat="@drawable/buy_50" />

    <ImageView
        android:id="@+id/iv_100"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white"
        android:paddingLeft="20dp"
        android:paddingRight="150dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_300"
        app:layout_constraintLeft_toLeftOf="@+id/iv_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_50"
        app:srcCompat="@drawable/buy_100" />

    <ImageView
        android:id="@+id/iv_300"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white"
        android:paddingLeft="20dp"
        android:paddingRight="150dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_500"
        app:layout_constraintLeft_toLeftOf="@+id/iv_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_100"
        app:srcCompat="@drawable/buy_300" />

    <ImageView
        android:id="@+id/iv_500"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginBottom="1dp"
        android:background="@android:color/white"
        android:paddingLeft="20dp"
        android:paddingRight="150dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_1000"
        app:layout_constraintLeft_toLeftOf="@+id/iv_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_300"
        app:srcCompat="@drawable/buy_500" />

    <ImageView
        android:id="@+id/iv_1000"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white"
        android:paddingLeft="20dp"
        android:paddingRight="150dp"
        app:layout_constraintBottom_toTopOf="@+id/bg_bot"
        app:layout_constraintLeft_toLeftOf="@+id/iv_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_500"
        app:srcCompat="@drawable/buy_1000" />

    <Button
        android:id="@+id/btn_10"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/purple_btn_bg2"
        android:text="1000원"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/iv_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_10" />

    <Button
        android:id="@+id/btn_30"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:background="@drawable/purple_btn_bg2"
        android:text="2900원"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_30"
        app:layout_constraintLeft_toLeftOf="@+id/btn_10"
        app:layout_constraintRight_toRightOf="@+id/btn_10"
        app:layout_constraintTop_toTopOf="@+id/iv_30" />

    <Button
        android:id="@+id/btn_50"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:background="@drawable/purple_btn_bg2"
        android:text="4900원"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_50"
        app:layout_constraintLeft_toLeftOf="@+id/btn_10"
        app:layout_constraintRight_toRightOf="@+id/btn_10"
        app:layout_constraintTop_toTopOf="@+id/iv_50" />

    <Button
        android:id="@+id/btn_100"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:background="@drawable/purple_btn_bg2"
        android:text="9900원"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_100"
        app:layout_constraintLeft_toLeftOf="@+id/btn_10"
        app:layout_constraintRight_toRightOf="@+id/btn_10"
        app:layout_constraintTop_toTopOf="@+id/iv_100" />

    <Button
        android:id="@+id/btn_300"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:background="@drawable/purple_btn_bg2"
        android:text="29000원"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_300"
        app:layout_constraintLeft_toLeftOf="@+id/btn_10"
        app:layout_constraintRight_toRightOf="@+id/btn_10"
        app:layout_constraintTop_toTopOf="@+id/iv_300" />

    <Button
        android:id="@+id/btn_500"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:background="@drawable/purple_btn_bg2"
        android:text="49000원"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_500"
        app:layout_constraintLeft_toLeftOf="@+id/btn_10"
        app:layout_constraintRight_toRightOf="@+id/btn_10"
        app:layout_constraintTop_toTopOf="@+id/iv_500" />

    <Button
        android:id="@+id/btn_1000"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:background="@drawable/purple_btn_bg2"
        android:text="99000원"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_1000"
        app:layout_constraintLeft_toLeftOf="@+id/btn_10"
        app:layout_constraintRight_toRightOf="@+id/btn_10"
        app:layout_constraintTop_toTopOf="@+id/iv_1000" />

    <ImageView
        android:id="@+id/bg_bot"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_1000"
        app:srcCompat="@android:color/white" />

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/purple_btn_bg2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="무료 충전하기"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/bg_bot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg_bot" />
</android.support.constraint.ConstraintLayout>