<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/swipe_layout">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/UserPage_ImgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@mipmap/hdvd" />

            <View
                style="@style/Divider"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_rank"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/vip" />

                <ImageView
                    android:id="@+id/imageView34"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/rank_diamond" />

                <TextView
                    android:id="@+id/UserPage_txtProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="7"
                    android:text="상희, 28"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/UserPage_btnShared"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:background="@color/white"
                    android:outlineProvider="bounds"
                    app:srcCompat="@drawable/share_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/location" />

                <TextView
                    android:id="@+id/UserPage_txtDistance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"

                    android:layout_marginStart="10dp"
                    android:layout_weight="9"
                    android:gravity="center_vertical|start"
                    android:text="15km 거리에 있음"
                    android:textColor="@color/black" />
            </LinearLayout>

            <View
                android:id="@+id/Divide_Memo"
                style="@style/Divider"
                />

            <TextView
                android:id="@+id/UserPage_txtMemo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:text="한국대학교에 다니고요 학생이고요\n같이놉시다" />



            <View
                android:id="@+id/Divide_fan"
                style="@style/Divider"
                 />

            <LinearLayout
                android:id="@+id/ll_fan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_fan_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_like"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:text="팔로워"
                        android:textColor="@color/textColorDark"
                        android:textSize="18sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/lv_like"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:orientation="horizontal"
                        android:scrollbars="none" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fan_liked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_liked"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:text="팔로잉"
                        android:textColor="@color/textColorDark"
                        android:textSize="18sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/lv_liked"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="0.6"
                        android:scrollbars="none" />

                </LinearLayout>

            </LinearLayout>
          <!--  <View
                style="@style/Divider"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/UserPage_Insta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="140장의 instagram 사진" />

                <GridView
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>-->
            <View
                android:id="@+id/Divide_Btn"
                style="@style/Divider"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:orientation="horizontal"


                >


                <ImageButton
                    android:id="@+id/UserPage_btnRegister"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star"
                    android:background="@drawable/imgbt_state"
 />


   <!--             <ImageButton
                    android:id="@+id/UserPage_btnGiftJewel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_gift"
                    android:background="@drawable/imgbt_state"
                     />-->
                <ImageButton
                    android:id="@+id/UserPage_btnMessage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/btn_chat_selected"
                    android:background="@drawable/imgbt_state"
                    />

                <ImageButton
                    android:id="@+id/UserPage_btnGiftHoney"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_card"
                    android:background="@drawable/imgbt_state"

                     />



            </LinearLayout>
        </LinearLayout>


    </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>