<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_fan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/tv_gift_ranking"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_fan"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/circle_border"
        android:padding="2dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_gift_ranking"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:text="닉네임"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/iv_fan"
        app:layout_constraintTop_toTopOf="@+id/iv_fan" />

    <ImageView
        android:id="@+id/iv_grade"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="2dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/tv_nickname"
        app:layout_constraintTop_toTopOf="@+id/iv_fan" />

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/iv_grade"
        app:layout_constraintTop_toTopOf="@+id/iv_fan" />


    <ImageView
        android:id="@+id/heart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_gift_count"
        app:layout_constraintRight_toLeftOf="@+id/tv_gift_count"
        app:srcCompat="@drawable/heart" />

    <TextView
        android:id="@+id/tv_gift_count"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="3500"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_fan"
        app:layout_constraintLeft_toLeftOf="@+id/tv_nickname"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname" />

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_fan"
        app:srcCompat="@color/gray" />


</android.support.constraint.ConstraintLayout>