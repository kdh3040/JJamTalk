<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minHeight="200dp">

    <TextView
        android:id="@+id/textView44"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/rounded_top_yellow"
        android:textColor="@color/textColorDark"
        android:textSize="18sp"

        android:gravity="center"
        android:text="보석 선물하기" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:background="@color/white">

        <Spinner
            android:id="@+id/sp_jewel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView46"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"

            android:gravity="center"
            android:text="을 선물하시겠습니까?" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/rounded_bottom_white"
        android:orientation="horizontal">


        <Button
            android:id="@+id/giftJew_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_pressed"
            android:text="확인" />

        <Button
            android:id="@+id/giftJew_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_pressed"
            android:text="취소"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
