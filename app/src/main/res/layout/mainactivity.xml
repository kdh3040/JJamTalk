<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/goldColor"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout_topbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@android:color/transparent"


        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_mypage"
            android:layout_width="0dp"
            android:layout_height="match_parent"


            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />

        <ImageView
            android:id="@+id/ib_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"

            android:src="@mipmap/filter" />

        <ImageView
            android:id="@+id/iv_itemBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/item_box" />


        <ImageView
            android:id="@+id/iv_honeybox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="false"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_mailbox" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/frag_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:background="@color/boardBgColor"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_lowbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="3"
        android:background="@color/boardBgColor"
        android:orientation="horizontal"
        android:translationZ="2dp">


        <ImageView
            android:id="@+id/ib_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_home_selected"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ib_cardlist"

            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"


            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_star"

            />


        <ImageView
            android:id="@+id/ib_chatlist"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_chat_selected"

            />


        <ImageView
            android:id="@+id/ib_fan"
            style="@android:style/Widget.DeviceDefault.ImageButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:background="@android:color/transparent"
            android:scaleType="fitCenter"


            android:src="@drawable/btn_fan_selected" />

        <ImageView
            android:id="@+id/ib_board"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@android:color/transparent"
            android:scaleType="fitCenter"

            android:src="@drawable/btn_board_selected" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"

        android:background="@color/boardBgColor"
        android:orientation="horizontal"
        android:translationZ="2dp">

        <TextView
            android:id="@+id/textView39"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="홈"
            android:textColor="@color/bambamcolor" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="즐겨찾기"
            android:textColor="@color/bambamcolor" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="채팅"
            android:textColor="@color/bambamcolor" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="팬"
            android:textColor="@color/bambamcolor" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="게시판"
            android:textColor="@color/bambamcolor" />

    </LinearLayout>


</LinearLayout>


