<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg_topbar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/goldColor" />

    <ImageView
        android:id="@+id/iv_mypage"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:padding="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile"></ImageView>

    <ImageButton
        android:id="@+id/ib_filter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:padding="3dp"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toLeftOf="@+id/iv_itemBox"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/filter"></ImageButton>

    <ImageView
        android:id="@+id/iv_itemBox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:padding="3dp"
        app:layout_constraintRight_toLeftOf="@+id/iv_honeybox"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/randombox"></ImageView>

    <ImageView
        android:id="@+id/iv_honeybox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:padding="3dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mail"></ImageView>

    <ImageView
        android:id="@+id/alarm_mail"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:visibility="gone"
        app:layout_constraintRight_toLeftOf="@+id/iv_honeybox"
        app:layout_constraintTop_toTopOf="@+id/iv_honeybox"
        app:srcCompat="@android:color/holo_red_dark" />

    <ImageView
        android:id="@+id/bg_bottom"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:color/white" />

    <ImageButton
        android:id="@+id/ib_home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/ib_chatlist"
        app:layout_constraintEnd_toStartOf="@+id/ib_cardlist"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/icon_home"></ImageButton>


    <ImageButton
        android:id="@+id/ib_cardlist"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/ib_chatlist"
        app:layout_constraintLeft_toRightOf="@+id/ib_home"
        app:layout_constraintRight_toLeftOf="@+id/ib_chatlist"
        app:srcCompat="@drawable/favorite"></ImageButton>

    <ImageView
        android:id="@+id/alarm_favor"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        app:layout_constraintRight_toLeftOf="@+id/ib_cardlist"
        app:layout_constraintTop_toTopOf="@+id/ib_cardlist"
        app:srcCompat="@android:color/holo_red_dark" />

    <ImageButton
        android:id="@+id/ib_chatlist"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/tv_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/chat_icon"></ImageButton>

    <ImageView
        android:id="@+id/alarm_chat"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:visibility="gone"
        app:layout_constraintRight_toLeftOf="@+id/ib_chatlist"
        app:layout_constraintTop_toTopOf="@+id/alarm_favor"
        app:srcCompat="@android:color/holo_red_dark" />

    <ImageButton
        android:id="@+id/ib_fan"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/ib_chatlist"
        app:layout_constraintLeft_toRightOf="@+id/ib_chatlist"
        app:layout_constraintRight_toLeftOf="@+id/ib_board"
        app:srcCompat="@drawable/ic_fan"></ImageButton>

    <ImageView
        android:id="@+id/alarm_fan"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:visibility="gone"
        app:layout_constraintRight_toLeftOf="@+id/ib_fan"
        app:layout_constraintTop_toTopOf="@+id/alarm_favor"
        app:srcCompat="@android:color/holo_red_dark" />

    <ImageButton
        android:id="@+id/ib_board"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/ib_chatlist"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ib_fan"
        app:srcCompat="@drawable/board"></ImageButton>

    <FrameLayout
        android:id="@+id/frag_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bg_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_mypage"></FrameLayout>

    <TextView
        android:id="@+id/tv_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="홈"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/ib_home"
        app:layout_constraintRight_toRightOf="@+id/ib_home" />

    <TextView
        android:id="@+id/tv_favor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="즐겨찾기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_home"
        app:layout_constraintRight_toLeftOf="@+id/tv_content" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_horizontal"
        android:text="채팅"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_fan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="팬"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/ib_fan"
        app:layout_constraintRight_toRightOf="@+id/ib_fan" />

    <TextView
        android:id="@+id/tv_board"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_horizontal"
        android:text="게시판"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_fan" />
</android.support.constraint.ConstraintLayout>