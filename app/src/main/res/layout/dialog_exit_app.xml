<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/rounded_top_dialog"


        android:gravity="center"
        android:text="종료 확인"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        ads:adSize="MEDIUM_RECTANGLE"
        android:background="@drawable/rounded_top_dialog"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
        android:visibility="gone">
    </com.google.android.gms.ads.AdView>

    <View
        android:id="@+id/Divide_Btn"
        style="@style/AlertDivider"

        />
    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_white_stroke_black"
        android:gravity="center"
        android:text="톡킹을 종료하시겠습니까?"

        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rounded_bottom_white"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="0dp"
            android:layout_height="60dp"

            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/base_btn_bg"
            android:text="종료"
            android:textSize="20dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:background="@drawable/base_btn_bg"
            android:text="계속"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>