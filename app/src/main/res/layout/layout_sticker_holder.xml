    <ImageView
        android:id="@+id/sticker5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/emerald" />

    <ImageView
        android:id="@+id/sticker6"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/sapphire" />

    <ImageView
        android:id="@+id/sticker7"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/ruby" />

    <ImageView
        android:id="@+id/sticker8"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/diamod" />


</LinearLayout>