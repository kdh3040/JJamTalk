<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="5dp"
    android:weightSum="10">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_weight="2"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/hedfvb" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_profile"
            android:text="나애리,28" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nickname"
            android:layout_toRightOf="@+id/iv_profile"
            android:text="17/8/13" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_my_card"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        app:srcCompat="@drawable/honeyicon" />

    <TextView
        android:id="@+id/tv_honeycount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/iv_my_card"
        android:layout_alignParentRight="false"
        android:layout_toLeftOf="@+id/iv_my_card"
        android:layout_weight="4"
        android:gravity="left|center_vertical"
        android:text="3470"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>