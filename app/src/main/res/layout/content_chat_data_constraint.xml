<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ChatRoom_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    >

    <ImageView
        android:id="@+id/bg_gift"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/heart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/chatRoomBg" />

    <ImageView
        android:id="@+id/ChatRoom_Img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/heart" />


    <TextView
        android:id="@+id/ChatRoom_name1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="닉네임1"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/ChatRoom_Img"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/goldColor"
        app:layout_constraintRight_toLeftOf="@id/message2"
        app:layout_constraintBottom_toBottomOf="@id/message2"/>

    <TextView
        android:id="@+id/message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:text="메세지내용1"
        android:background="@drawable/bg_chat_yours"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/ChatRoom_name1"
        app:layout_constraintTop_toBottomOf="@id/ChatRoom_name1" />

    <ImageView
        android:id="@+id/send_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:maxWidth="250dp"
        android:visibility="gone"
        app:srcCompat="@drawable/board"
        app:layout_constraintLeft_toLeftOf="@id/ChatRoom_name1"
        app:layout_constraintTop_toBottomOf="@id/ChatRoom_name1"/>

    <TextView
        android:id="@+id/message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="메세지2"
        android:maxWidth="250dp"
        android:background="@drawable/bg_chat_mine"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <!--    <ImageView
        android:id="@+id/Sender_Img"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/bg1" />-->

    <ImageView
        android:id="@+id/send_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/coin"
        app:layout_constraintRight_toRightOf="parent"/>


    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_weight="2"
        android:orientation="vertical">

</LinearLayout>-->


    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        app:layout_constraintBottom_toBottomOf="@+id/from_nickname"
        app:layout_constraintLeft_toLeftOf="@id/bg_gift"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/from_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="선물주는 닉네임"
        app:layout_constraintStart_toEndOf="@+id/from"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"
        app:layout_constraintBottom_toBottomOf="@+id/to_nickname"
        app:layout_constraintStart_toStartOf="@+id/from" />

    <TextView
        android:id="@+id/to_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="선물받는닉네임"
        app:layout_constraintStart_toStartOf="@+id/from_nickname"
        app:layout_constraintTop_toBottomOf="@+id/from_nickname"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/giftmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선물메세지"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_nickname"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/heart_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하트갯수"
        app:layout_constraintBottom_toBottomOf="@+id/heart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/heart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/heart_count"
        app:layout_constraintTop_toBottomOf="@+id/giftmessage"
        app:srcCompat="@drawable/heart"
        android:visibility="gone"/>


</android.support.constraint.ConstraintLayout>



