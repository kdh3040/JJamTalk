<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ChatRoom_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    >

    <ImageView
        android:id="@+id/bg_gift"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/heart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/bambamcolor" />

    <ImageView
        android:id="@+id/ChatRoom_Img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/heart" />


    <TextView
        android:id="@+id/ChatRoom_name1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="닉네임1"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/ChatRoom_Img"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/goldColor"
        app:layout_constraintBottom_toTopOf="@+id/date2"
        app:layout_constraintRight_toLeftOf="@id/message2" />

    <TextView
        android:id="@+id/message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_yours"
        android:gravity="left"
        android:maxWidth="250dp"
        android:text="메세지내용1"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/ChatRoom_name1"
        app:layout_constraintTop_toBottomOf="@id/ChatRoom_name1" />

    <TextView
        android:id="@+id/date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜1"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/message1"
        app:layout_constraintLeft_toRightOf="@+id/message1" />

    <ImageView
        android:id="@+id/send_img1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/ChatRoom_name1"
        app:layout_constraintTop_toBottomOf="@id/ChatRoom_name1"
        app:srcCompat="@drawable/board" />

    <TextView
        android:id="@+id/message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_mine"
        android:gravity="left|center"
        android:maxWidth="250dp"
        android:text="메세지2"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--    <ImageView
        android:id="@+id/Sender_Img"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/bg1" />-->

    <TextView
        android:id="@+id/date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜2"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/message2"
        app:layout_constraintRight_toLeftOf="@+id/check" />

    <ImageView
        android:id="@+id/send_img2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:src="@drawable/coin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_weight="2"
        android:orientation="vertical">

</LinearLayout>-->


    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="From"
        android:textSize="14sp"

        app:layout_constraintBottom_toBottomOf="@+id/from_nickname"
        app:layout_constraintLeft_toLeftOf="@id/bg_gift" />

    <TextView
        android:id="@+id/from_nickname"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="bottom"
        android:text="선물주는 닉네임"
        android:textSize="18sp"

        app:layout_constraintStart_toEndOf="@+id/from"
        app:layout_constraintTop_toTopOf="@id/bg_gift" />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/to_nickname"
        app:layout_constraintStart_toStartOf="@+id/from" />

    <TextView
        android:id="@+id/to_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="선물받는닉네임"

        app:layout_constraintStart_toStartOf="@+id/from_nickname"
        app:layout_constraintTop_toBottomOf="@+id/from_nickname" />

    <TextView
        android:id="@+id/giftmessage"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="선물메세지"
        android:textSize="14sp"

        app:layout_constraintLeft_toLeftOf="@id/bg_gift"
        app:layout_constraintRight_toRightOf="@id/bg_gift"
        app:layout_constraintTop_toBottomOf="@+id/to_nickname" />

    <TextView
        android:id="@+id/heart_count"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="하트갯수"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/bg_gift"
        app:layout_constraintRight_toRightOf="@id/bg_gift"
        app:layout_constraintTop_toBottomOf="@id/giftmessage" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="30dp"
        android:layout_height="30dp"

        app:layout_constraintStart_toEndOf="@+id/heart_count"
        app:layout_constraintTop_toBottomOf="@+id/giftmessage"
        app:srcCompat="@drawable/heart"
        />


</android.support.constraint.ConstraintLayout>



