<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_board"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/board_thumnail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:background="@drawable/circle_border"
            android:padding="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
           android:layout_gravity="center"
            android:weightSum="6"
            android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:weightSum="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/board_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="본문"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="5"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/user_item"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bee"
                    />
                <ImageView
                    android:id="@+id/user_rank"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bee"
                    />
                <ImageView
                    android:id="@+id/user_sex"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bee"
                    />
                <TextView
                    android:id="@+id/board_writer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="글쓴이"
                    />
                <TextView
                    android:id="@+id/board_write_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="글쓴 날자"
                    />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/board_delete"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/bee" />

        <Button
            android:id="@+id/board_report"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:text="신고"/>

    </LinearLayout>
    </LinearLayout>
    <View style="@style/Divider" />
</LinearLayout>
