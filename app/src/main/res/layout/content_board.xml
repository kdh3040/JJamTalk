<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_board"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/boardBgColor"

        android:orientation="horizontal"
        android:weightSum="8">

        <ImageView
            android:id="@+id/board_thumnail"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_launcher" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/board_writer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="글쓴이"
                    android:textColor="@color/boardNickColor" />

                <TextView
                    android:id="@+id/board_write_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="글쓴 날자"
                    android:textColor="@color/boardDateColor" />

                <TextView
                    android:id="@+id/board_like_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="좋아요 개수"
                    android:textColor="@color/boardLikeColor" />


            </LinearLayout>

            <TextView
                android:id="@+id/board_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="본문"
                android:textColor="@color/boardTextColor" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/board_like_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mycard_icon" />

        <ImageButton
            android:id="@+id/board_delete"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mycard_icon" />


    </LinearLayout>

</LinearLayout>
