    </style>

    <style name="ImgBtn" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/round_btn_bg</item>
    </style>

    <style name="CustomActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>


    <style name="MyTitleTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/black</item>


    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    <style name="NoTitleBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/baseColor</item>
        <item name="colorPrimaryDark">@color/baseColorDark</item>
        <item name="color"></item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:buttonStyle">@style/button</item>-->
        <item name="windowNoTitle">true</item>


    </style>

    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/gray_light</item>
        <item name="android:shape">rectangle</item>
    </style>

    <style name="rentangleButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimaryTrans</item>
        <item name="colorControlHighlight">@color/gray</item>
        <item name="android:shape">rectangle</item>
    </style>

    <style name="PrimaryButtonReten" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/baseColorLight</item>
        <item name="colorControlHighlight">@color/gray</item>
        <item name="android:shape">rectangle</item>

    </style>

    <style name="setting" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ib_home">

    </style>

    <style name="Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ViewCountRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/baseColorLight</item>
        <item name="colorControlActivated">@color/baseColorLight</item>
    </style>

    <style name="ManRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/bambamcolor</item>
        <item name="colorControlActivated">@color/bambamcolor</item>
    </style>

    <style name="WomanRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/womenColor</item>
        <item name="colorControlActivated">@color/womenColor</item>
    </style>

    <style name="ManCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/bambamcolor</item>
        <item name="colorControlActivated">@color/bambamcolor</item>
    </style>

    <style name="WomanCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/womenColor</item>
        <item name="colorControlActivated">@color/womenColor</item>
    </style>

    <style name="ReportCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/boardLikeColor</item>
        <item name="colorControlActivated">@color/boardLikeColor</item>
    </style>

    <style name="RejectCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/baseColor</item>
        <item name="colorControlActivated">@color/baseColor</item>
    </style>

    <style name="AlarmCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/baseColorLight</item>
        <item name="colorControlActivated">@color/baseColorLight</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
