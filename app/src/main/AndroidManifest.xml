<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hodo.jjamtalk">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <application

        android:allowBackup="true"
        android:icon="@drawable/bee"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/NoTitleBar"
            android:screenOrientation="portrait"

           />
        <activity
            android:name=".LoginActivity"
            android:theme ="@style/NoTitleBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".Firebase.MyFirebaseInstanceIdSerivce">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".Firebase.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".MyProfileActivity" />
        <activity android:name=".MyPageActivity"
            android:parentActivityName=".MainActivity"
            android:label="내 페이지"/>

        <activity android:name=".SettingActivity"
            android:label="설정">
        </activity>
        <activity android:name=".PublicChatRoomHostActivity"
            android:label="공개채팅방"
            android:windowSoftInputMode="stateAlwaysHidden"
            >

        </activity>
        <activity android:name=".FanClubActivity"
            android:label="팬클럽"

            >

        </activity>

        <activity android:name=".BuyJewelActivity"
            android:label="상자 구입"
           >
        </activity>
        <activity android:name=".PublicChatOptionMenuBanActivity"
            android:label="차단 리스트"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        <activity android:name=".PublicChatOptionMenuUserListActivity"
            android:label="현재 참가자"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        <activity android:name=".HeartActivity" />
        <activity android:name=".ImageActivity"
            android:theme ="@style/NoTitleBar"/>
        <activity android:name=".Kakao.KakaoSignupActivity" />
        <activity android:name=".ClickedMyPicActivity"
            android:theme ="@style/NoTitleBar">
        </activity>
        <activity android:name=".InputProfile"></activity>
        <activity android:name=".UserPageActivity"
            android:theme="@style/NoTitleBar"></activity>

        <activity android:name=".PublicChatRoomActivity"

            ></activity>
        <activity android:name=".ChatRoomActivity"
            ></activity>
        <activity android:name=".BoardItemActivity"
            android:label="허허참"
            ></activity>
        <activity android:name=".BoardWriteActivity"
            android:label="글쓰기"
            ></activity>
        <activity android:name=".BoardMyListActivity"
            android:label="내가 쓴 글"
            ></activity>
        <activity android:name=".ImageViewPager"
            ></activity>

        <activity android:name=".BlockListActivity"
            android:label="차단 목록"></activity>

        <activity android:name=".MailboxActivity"
            android:label="우체통"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".HoneyGetHistoryActivity"
            android:label= "받은 꿀"></activity>
        <activity android:name=".HoneySentHistoryActivity"
            android:label= "선물한 꿀"></activity>
    </application>

</manifest>