<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hodo.jjamtalk">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/bee"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/NoTitleBar"/>
        <activity
            android:name=".LoginActivity"
            android:theme ="@style/NoTitleBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".Firebase.MyFirebaseInstanceIdSerivce">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".Firebase.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".MyPageActivity"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".SettingActivity"
            android:label="설정"
            android:parentActivityName=".MyPageActivity">


        </activity>
        <activity android:name=".MyProfileActivity"
            android:parentActivityName=".MyPageActivity"

            android:label="프로필 편집"></activity>
        <activity android:name=".HeartActivity" />
        <activity android:name=".Kakao.KakaoSignupActivity" />
        <activity android:name=".ClickedMyPicActivity"
            android:theme ="@style/NoTitleBar">
        </activity>
        <activity android:name=".InputProfile"></activity>
        <activity android:name=".UserPageActivity"
            android:theme="@style/NoTitleBar"></activity>
        <activity android:name=".BoardActivity"
            android:label="게시판"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".CardListActivity"
            android:label="내 카드"
            android:parentActivityName=".MainActivity"></activity>

        <activity android:name=".ChatListActivity"
            android:label="쪽지함"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".ChatRoomActivity"
            android:parentActivityName=".ChatListActivity"

            ></activity>
        <activity android:name=".BoardItemActivity"
            android:label="허허참"
            android:parentActivityName=".BoardActivity"


            ></activity>
        <activity android:name=".BoardWriteActivity"
            android:label="글쓰기"
            android:parentActivityName=".BoardActivity"

            ></activity>
        <activity android:name=".BoardMyListActivity"
            android:label="내가 쓴 글"
            android:parentActivityName=".BoardActivity"

            ></activity>
        <activity android:name=".ImageViewPager"
            android:theme ="@style/NoTitleBar"></activity>

        <activity android:name=".HoneyActivity"
            android:label="나의 꿀"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".BlockListActivity"
            android:label="차단 목록"
            android:parentActivityName=".SettingActivity"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>