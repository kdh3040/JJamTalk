<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dohosoft.talkking"
    android:versionCode="1"
    android:versionName="1.0.2">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo300"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@layout/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.dohosoft.talkking.MainActivity"
            android:parentActivityName="com.dohosoft.talkking.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleBar" />
        <activity
            android:name="com.dohosoft.talkking.LoginActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.dohosoft.talkking.Firebase.MyFirebaseInstanceIdSerivce">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.dohosoft.talkking.Firebase.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name="com.dohosoft.talkking.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dohosoft.talkking.MyProfileActivity"
            android:label="프로필"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dohosoft.talkking.MyPageActivity"
            android:label="내 페이지"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dohosoft.talkking.SettingActivity"
            android:label="설정"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.dohosoft.talkking.UserFanActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleBar" />
        <activity
            android:name="com.dohosoft.talkking.MainSettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dohosoft.talkking.BuyGoldActivity"
            android:label="코인 충전하기"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dohosoft.talkking.Kakao.KakaoSignupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dohosoft.talkking.ClickedMyPicActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleBar" />
        <activity
            android:name="com.dohosoft.talkking.InputProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dohosoft.talkking.UserPageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleBar" />
        <activity
            android:name="com.dohosoft.talkking.ChatRoomActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dohosoft.talkking.BoardItemActivity"
            android:label="허허참"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dohosoft.talkking.BoardWriteActivity"
            android:label="글쓰기"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dohosoft.talkking.BoardMyListActivity"
            android:label="내가 쓴 글"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dohosoft.talkking.ImageViewPager"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleBar" />
        <activity
            android:name="com.dohosoft.talkking.MyImageViewPager"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleBar" />
        <activity
            android:name="com.dohosoft.talkking.BlockListActivity"
            android:label="차단 목록"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dohosoft.talkking.MailboxActivity"
            android:label="받은 하트"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="com.dohosoft.talkking.HoneyGetHistoryActivity"
            android:label="받은 꿀"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dohosoft.talkking.HoneySentHistoryActivity"
            android:label="선물한 꿀"
