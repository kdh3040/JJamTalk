        <activity
            android:name="com.dohosoft.talkking.MyJewelBoxActivity"
            android:label="내 아이템"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleBar" />
        <activity
            android:name="com.dohosoft.talkking.privacyActivity"
            android:label="@string/title_activity_privacy"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.dohosoft.talkking.AccessActivity"
            android:label="@string/title_activity_access"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.dohosoft.talkking.LocActivity"
            android:label="@string/title_activity_loc"
            android:theme="@style/AppTheme.NoActionBar" />
